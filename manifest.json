  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": [
            ".csv",
            ".json",
            ".txt",
            ".md",
            ".xlsx",
            "text/csv",
            "application/json",
            "text/plain",
            "text/markdown",
            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
          ]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+savate",
      "url": "/?protocol=%s"
    },
    {
      "protocol": "web+savate-session",
      "url": "/?session=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"],
        "text/markdown": [".md"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
