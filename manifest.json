  "capture_links": "existing-client-navigate",
  "scope_extensions": [
    {
      "origin": "https://savate-officials.app"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/icons/*",
        "/screenshots/*",
        "/manifest.json"
      ],
      "matches": ["*"]
    }
  ]
